<Addin id = "MonoDevelop.Debugger.Soft.AspNet"
       name	     = "Mono Soft Debugger Support for ASP.NET"
       author	 = "Michael Hutchinson"
       url       = "http://www.mono-project.com"
       description = "Mono Soft Debugger Support for ASP.NET"
       copyright   = "MIT X11"
       category = "Debugging"
       version   = "3.0.3.5">

	<Dependencies>
		<Addin id="MonoDevelop.Core" version="3.0.3.5"/>
		<Addin id="MonoDevelop.Debugger" version="3.0.3.5"/>
		<Addin id="MonoDevelop.AspNet" version="3.0.3.5"/>
		<Addin id="MonoDevelop.Debugger.Soft" version="3.0.3.5"/>
	</Dependencies>
	
	<Extension path="/MonoDevelop/Debugging/DebuggerEngines">
		<DebuggerEngine
			id="Mono.Debugger.Soft.AspNet"
			name="Mono Soft Debugger for ASP.NET"
			features="Breakpoints, Pause, Stepping, DebugFile, Catchpoints"
			type="MonoDevelop.Debugger.Soft.AspNet.AspNetSoftDebuggerEngine" />
	</Extension>
</Addin>
